<%- include('../partials/head') %>
<h1>Admin</h1>
<div class="row">
  <div class="col-md-6">
    <h3>Products</h3>
    <a class="btn btn-sm btn-secondary mb-2" href="/admin/products/new">Add product</a>
    <ul class="list-group">
      <% products.forEach(p => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= p.title %></span>
          <form method="post" action="/admin/products/<%= p._id %>/delete">
            <button class="btn btn-sm btn-outline-danger">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
  <div class="col-md-6">
    <h3>Posts</h3>
    <a class="btn btn-sm btn-secondary mb-2" href="/admin/posts/new">Add post</a>
    <ul class="list-group">
      <% posts.forEach(p => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= p.title %></span>
          <form method="post" action="/admin/posts/<%= p._id %>/delete">
            <button class="btn btn-sm btn-outline-danger">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</div>
<%- include('../partials/foot') %>
