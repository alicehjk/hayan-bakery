<%- include('../partials/head') %>
<h1>New product</h1>
<form method="post" action="/admin/products" class="col-md-8 p-0">
  <div class="form-group"><label>Title</label><input name="title" class="form-control" required></div>
  <div class="form-group"><label>Price</label><input name="price" type="number" step="0.01" class="form-control" required></div>
  <div class="form-group"><label>Category</label><input name="category" class="form-control"></div>
  <div class="form-group"><label>Image URL</label><input name="image" class="form-control"></div>
  <div class="form-group"><label>Description</label><textarea name="desc" class="form-control" rows="4"></textarea></div>
  <button class="btn btn-primary">Save</button>
</form>
