<%- include('partials/head') %>
<%- include('partials/navbar', { activePage: 'home', user: user }) %>
<div class="container py-4">
  <h1 class="mb-3">Fresh This Week</h1>
  <div class="row">
    <% (latest || []).forEach(p => { %>
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= p.title %></h5>
            <div class="text-muted">$<%= Number(p.price).toFixed(2) %></div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<%- include('partials/foot') %>
