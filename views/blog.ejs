<%- include('partials/head') %>
<%- include('partials/navbar', { activePage: 'blog', user: user }) %>
<div class="container py-4">
  <div class="d-flex align-items-baseline mb-3">
    <h1 class="mb-0">From the Kitchen</h1>
    <span class="ml-2 text-muted">Notes, drops, and stories</span>
  </div>
  <div class="list-group">
    <% (posts || []).forEach(p => { %>
      <a class="list-group-item list-group-item-action" href="#"><strong><%= p.title %></strong><br><span class="text-muted"><%= (p.body || '').slice(0, 120) %></span></a>
    <% }) %>
  </div>
</div>
<%- include('partials/foot') %>
