<%- include('partials/head') %>
<%- include('partials/navbar', { activePage: 'catalog', user: user }) %>
<div class="container py-4">
  <div class="d-flex align-items-baseline mb-3">
    <h1 class="mb-0">Catalog</h1>
    <span class="ml-2 text-muted">Fresh bakes & seasonal picks</span>
  </div>
  <form class="form-inline mb-3" method="get">
    <input name="q" class="form-control mr-2" style="min-width:260px" placeholder="Search..." value="<%= q || '' %>">
    <button class="btn btn-primary">Search</button>
  </form>
  <div class="row">
    <% (items || []).forEach(p => { %>
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= p.title %></h5>
            <div class="text-muted">$<%= Number(p.price).toFixed(2) %></div>
            <p class="mt-2 text-muted"><%= (p.desc || '').slice(0, 100) %></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<%- include('partials/foot') %>
